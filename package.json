{
	"name": "hire-ai",
	"version": "0.1.0",
	"private": true,
	"type": "module",
	"scripts": {
		"dev": "next dev --turbopack",
		"build": "next build",
		"start": "next start",
		"lint": "next lint",
		"db:generate": "drizzle-kit generate:pg",
		"db:push": "drizzle-kit push:pg",
		"db:migrate": "node -r dotenv/config ./scripts/runMigrations.js",
		"db:custom-migrate": "node -r dotenv/config ./scripts/runCustomMigrations.js",
		"db:setup": "npm run db:generate && npm run db:migrate && npm run db:custom-migrate",
		"upload:resumes": "node ./scripts/uploadResumes.js",
		"create:test-resume": "node ./scripts/createTestResume.js"
	},
	"dependencies": {
		"dotenv": "^16.5.0",
		"drizzle-orm": "^0.29.0",
		"next": "15.3.3",
		"pdf-parse": "^1.1.1",
		"pg": "^8.11.3",
		"react": "^19.0.0",
		"react-dom": "^19.0.0",
		"textract": "^2.5.0"
	},
	"devDependencies": {
		"@eslint/eslintrc": "^3",
		"@tailwindcss/postcss": "^4",
		"@types/node": "^20",
		"@types/pdf-parse": "^1.1.5",
		"@types/pg": "^8.10.9",
		"@types/react": "^19",
		"@types/react-dom": "^19",
		"@types/textract": "^2.4.5",
		"drizzle-kit": "^0.20.0",
		"eslint": "^9",
		"eslint-config-next": "15.3.3",
		"tailwindcss": "^4",
		"ts-node": "^10.9.2",
		"typescript": "^5.8.3"
	}
}
